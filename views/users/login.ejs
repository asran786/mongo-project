<%- layout("./layouts/boilerplate.ejs") %>

    <div class="row px-5 py-5 ">
        <h1 class="offset-lg-3 offset-md-2 col-lg-6 col-md-8 colo-12">Login</h1>
        <form action="/user/login" novalidate method="post" class=" mt-3  needs-validation shadow rounded-2  offset-lg-3 offset-md-2 col-lg-6 col-md-8 colo-12">

            <div class="mb-3">
                <label class="form-label" for="title">Username</label>
                <input type="text" class="form-control" required name="username" id="title">
                <div class="invalid-feedback ">Username required</div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="title">Password</label>
                <input type="password" class="form-control" required name="password" id="title">
                <div class="invalid-feedback ">Password required</div>
            </div>

            <button class=" btn btn-success mb-3" type="submit">Submit</button>
        </form>
    </div>