<%- layout("./layouts/boilerplate.ejs") %>

    <body>
        <div class="row mx-lg-0  mx-md-0  mx-2 mt-2">

            <form action="/listing/<%= listing._id%>?_method=PUT" method="POST" novalidate class=" needs-validation shadow rounded-2  offset-lg-3 offset-md-2 col-lg-6 col-md-8 colo-12">
                <div class="text-center mx-auto ">
                    <h1 class=" ">Update Details</h1>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input type="text" class="form-control" required name="title" id="title" value="<%= listing.title %>">
                    <div class="invalid-feedback ">title required</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <input type="text" class="form-control" required name="description" id="description" value="<%= listing.description %>">
                    <div class="invalid-feedback">Description required </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Image URL:</label>
                    <input class="form-control" type="text" class="form-control" name="image" id="image" value="<%= listing.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <input type="number" class="form-control" required name="price" id="price" value="<%= listing.price %>">
                    <div class="invalid-feedback">Price should be valid </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input type="text" class="form-control" required name="location" id="location" value="<%= listing.location %>">
                    <div class="invalid-feedback">Laction is required </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="country">Country:</label>
                    <input type="text" class="form-control" required name="country" id="country" value="<%= listing.country %>">
                    <div class="invalid-feedback">Country shoud be mentioned</div>
                </div>
                <div class="mb-3 text-center mt-2">
                    <input class="bg-black btn-outline-dark rounded-3 text-white px-3 py-2  " type="submit" value="Submit">
                </div>
            </form>
        </div>
    </body>
    <script src="/javascript/validation.js"></script>